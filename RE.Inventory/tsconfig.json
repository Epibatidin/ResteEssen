{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "www/scripts/"    
  },
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "bin",
    "bld",
    "merges",
    "node_modules",
    "platforms",
    "plugins",
    "res",
    "www"
  ]
}
